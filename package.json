{
  "name": "webpack-build-process",
  "version": "1.0.0",
  "description": "Bundle frontend assets with WebPack",
  "author": "Rasso Hilber <mail@rassohilber.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "watch": "webpack --watch --mode=development --progress --stats minimal",
    "build": "webpack --mode=production  --progress --stats minimal",
    "production:deploy": "source .env && npm run build && rsync -avz --delete --delete-excluded --copy-links --exclude-from '.deployignore' ./ $PROD_SSH:$PROD_ROOT/content/themes/${PWD##*/}",
    "db:pull:production": "./sync/sync.sh production development --local",
    "db:pull:staging": "./sync/sync.sh staging development --local"
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "iOS >= 9"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": true,
      "postcss-logical": true,
      "postcss-dir-pseudo-class": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "esbuild-loader": "^2.18.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.5.3",
    "minimist": "^1.2.5",
    "postcss": "^8.4.6",
    "postcss-dir-pseudo-class": "^6.0.4",
    "postcss-loader": "^6.2.1",
    "postcss-logical": "^5.0.4",
    "sass": "^1.49.7",
    "sass-loader": "^12.6.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-livereload-plugin": "^3.0.2",
    "webpack-remove-empty-scripts": "^0.7.3"
  },
  "dependencies": {
    "@swup/debug-plugin": "^2.0.0",
    "@swup/scroll-plugin": "^1.3.1",
    "swup": "^2.0.14"
  }
}
